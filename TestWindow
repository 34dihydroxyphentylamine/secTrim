#include <SDL.h>
#include <iostream>

int main(int argc, char* argv[])
{
    // SDL initialisieren
    if (SDL_Init(SDL_INIT_VIDEO) < 0) {
        std::cout << "SDL konnte nicht initialisiert werden! SDL_Error: "
                  << SDL_GetError() << std::endl;
        return 1;
    }

    // Fenster erstellen
    SDL_Window* window = SDL_CreateWindow(
        "SDL Beispiel",
        SDL_WINDOWPOS_CENTERED,
        SDL_WINDOWPOS_CENTERED,
        800, 600,
        SDL_WINDOW_SHOWN
    );

    if (!window) {
        std::cout << "Fenster konnte nicht erstellt werden! SDL_Error: "
                  << SDL_GetError() << std::endl;
        SDL_Quit();
        return 1;
    }

    // Renderer erstellen
    SDL_Renderer* renderer = SDL_CreateRenderer(window, -1, SDL_RENDERER_ACCELERATED);
    if (!renderer) {
        std::cout << "Renderer konnte nicht erstellt werden! SDL_Error: "
                  << SDL_GetError() << std::endl;
        SDL_DestroyWindow(window);
        SDL_Quit();
        return 1;
    }

    bool running = true;
    SDL_Event event;

    while (running) {
        // Events prüfen
        while (SDL_PollEvent(&event)) {
            if (event.type == SDL_QUIT) {
                running = false;
            }
        }

        // Hintergrund schwarz
        SDL_SetRenderDrawColor(renderer, 0, 0, 0, 255);
        SDL_RenderClear(renderer);

        // Rechteck definieren (x, y, Breite, Höhe)
        SDL_Rect rect = {100, 100, 50, 50};

        // Rechteck Farbe setzen (weiß)
        SDL_SetRenderDrawColor(renderer, 255, 255, 255, 255);
        SDL_RenderFillRect(renderer, &rect);

        // Rendern
        SDL_RenderPresent(renderer);
    }

    // Aufräumen
    SDL_DestroyRenderer(renderer);
    SDL_DestroyWindow(window);
    SDL_Quit();

    return 0;
}
